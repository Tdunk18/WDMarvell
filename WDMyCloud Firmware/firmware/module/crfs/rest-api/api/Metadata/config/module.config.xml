<?xml version="1.0" encoding="UTF-8"?>
<module>
    <name>Metadata</name>
    <version>2.1</version>
    <description>Manages CRUD operations for metadata, metadatainfo, metadbgroup info and crawler status</description>

    <components>

        <component>
            <name>metadb_group</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MetaDbGroup</controller_class>
            <auth_security>
                <get>USER_OR_HMAC_AUTH</get>
            </auth_security>
        </component>

        <component>
            <name>metadb_summary</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MetaDbSummary</controller_class>
            <auth_security>
                <get>USER_OR_HMAC_AUTH</get>
            </auth_security>
        </component>

        <component>
            <name>metadb_info</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MetaDbInfo</controller_class>
            <auth_security>
                <get>USER_OR_HMAC_AUTH</get>
            </auth_security>
        </component>

        <component>
            <name>miocrawler_status</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MioCrawlerStatus</controller_class>
            <auth_security>
                <all>USER_AUTH_ALL</all>
            </auth_security>
        </component>

        <component>
            <name>mediacrawler_status</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MediaCrawlerStatus</controller_class>
            <auth_security>
                <all>USER_AUTH_ALL</all>
            </auth_security>
        </component>

        <component>
            <name>miodb</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MioDb</controller_class>
            <auth_security>
                <all>USER_AUTH_ALL</all>
            </auth_security>
        </component>

        <component>
            <name>mediacrawler</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\MediaCrawler</controller_class>
            <auth_security>
                <put>USER_AUTH</put>
            </auth_security>
        </component>

        <component>
            <name>external_volume_scan</name>
            <module>Metadata</module>
            <controller_class>\Metadata\Controller\ExternalVolumeScan</controller_class>
            <auth_security>
                <put>USER_AUTH</put>
                <get>USER_AUTH</get>
            </auth_security>
        </component>

    </components>

</module>