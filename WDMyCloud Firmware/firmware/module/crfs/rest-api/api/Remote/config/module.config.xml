<?xml version="1.0" encoding="UTF-8"?>
<module>
    <name>Remote</name>
    <version>1.0</version>
    <description>Module has device, device user, port test, config and manual port forward componenets for remote access functionality.</description >

   <components>

        <component>
            <name>device</name>
            <module>Remote</module>
            <controller_class>\Remote\Controller\Device</controller_class>
            <auth_security>
                <get>USER_AUTH</get>
                <post>ADMIN_AUTH</post>
                <put>USER_AUTH</put>
                <delete>ADMIN_AUTH</delete>
            </auth_security>
        </component>

        <component>
            <name>device_user</name>
            <module>Remote</module>
            <controller_class>\Remote\Controller\DeviceUser</controller_class>
            <auth_security>
                <all>USER_AUTH_ALL</all>
            </auth_security>
        </component>


        <component>
            <name>port_test</name>
            <module>Remote</module>
            <controller_class>\Remote\Controller\PortTest</controller_class>
            <auth_security>
                <get>NO_AUTH</get>
            </auth_security>
        </component>

        <component>
            <name>config</name>
            <module>Remote</module>
            <controller_class>\Remote\Controller\Config</controller_class>
            <auth_security>
                <get>NO_AUTH</get>
                <put>NO_AUTH</put>
            </auth_security>
        </component>

        <component>
            <name>manual_port_forward</name>
            <module>Remote</module>
            <controller_class>\Remote\Controller\ManualPortForward</controller_class>
            <auth_security>
                <get>USER_AUTH</get>
                <put>ADMIN_AUTH_LAN</put>
                <delete>ADMIN_AUTH_LAN</delete>
            </auth_security>
        </component>

        <component>
            <name>internet_access</name>
            <module>Remote</module>
            <controller_class>\Remote\Controller\InternetAccess</controller_class>
            <auth_security>
                <get>NO_AUTH_LAN</get>
            </auth_security>
        </component>

    </components>
    <class_factory>
        <factory>Remote\Device\SerialNumber</factory>
        <implementation>
            <class_name>Remote\Device\Linux\SerialNumberImpl</class_name>
            <attributes osname="linux" />
        </implementation>
        <implementation>
            <class_name>Remote\Device\Windows\SerialNumberImpl</class_name>
            <attributes osname="windows" />
        </implementation>
    </class_factory>
</module>
