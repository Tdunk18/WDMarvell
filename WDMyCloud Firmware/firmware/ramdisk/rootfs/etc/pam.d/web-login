#%PAM-1.0

# Sample PAM configuration file for Pure-FTPd.
# Install it in /etc/pam.d/pure-ftpd or add to /etc/pam.conf

auth       sufficient   /lib/security/pam_ldap.so
auth       sufficient   /lib/security/pam_winbind.so
auth       required     pam_listfile.so item=user sense=deny file=/etc/ftp_deny_user onerr=succeed
auth       required     pam_unix.so service=system-auth
auth       required     pam_shells.so
auth       required     pam_nologin.so
account    sufficient   /lib/security/pam_ldap.so
account    sufficient   /lib/security/pam_winbind.so
account    required     pam_unix.so service=system-auth
password   required     pam_unix.so service=system-auth
session    required     pam_unix.so service=system-auth
